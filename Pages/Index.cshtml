@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="card-columns">
    @foreach (var product in Model.Products)
    {
        <div class="card">
            <a href=@product.Url>
                <div class="card-img" style="background-image: url('@product.Image');">
                </div>
            </a>
            <div class="card-body">
                <h5 class="card-title">@product.Title</h5>
            </div>
        </div>
    }
</div>